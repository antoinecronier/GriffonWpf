<UserControl x:Class="GriffonWpf.UserControls.UserCreateUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GriffonWpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <Label x:Name="lblFirstname"/>
            <TextBox x:Name="txtBFirstname" Text="{Binding User.Firstname}"/>
            <Label x:Name="lblLastname"/>
            <TextBox x:Name="txtBLastname" Text="{Binding User.Lastname}"/>
            <Label x:Name="lblDateOfBirth"/>
            <DatePickerTextBox x:Name="datepickerDateOfBirth" Text="{Binding User.DateOfBirth}"/>
            <Label x:Name="lblLogin"/>
            <TextBox x:Name="txtBLogin" Text="{Binding User.Login}"/>
            <Label x:Name="lblPassword"/>
            <TextBox x:Name="txtBPassword" Text="{Binding User.Password}"/>
            <Button x:Name="btnValidate">Validate</Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
