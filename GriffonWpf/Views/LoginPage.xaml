<basePage:BasePage x:Class="GriffonWpf.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:basePage="clr-namespace:GriffonWpf.Views.Base"
      xmlns:local="clr-namespace:GriffonWpf.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="LoginPage">

    <StackPanel>
        <TextBlock x:Name="txtBlockLogin"></TextBlock>
        <TextBox x:Name="txtBoxLogin"></TextBox>
        <TextBlock x:Name="txtBlockPassword"></TextBlock>
        <TextBox x:Name="txtBoxPassword"></TextBox>
        <Button x:Name="btnValidate">Validate</Button>
    </StackPanel>
</basePage:BasePage>
